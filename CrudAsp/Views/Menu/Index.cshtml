<head>
    <link href="@Url.Content("~/css/dataTables.bootstrap4.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/menu/index.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/jstree-style.min.css")" rel="stylesheet" />
</head>
<div class="container mt-3">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Modules</h3>
            <div class="d-flex justify-content-end">
                <button class="btn btn-sm btn-primary" data-toggle="modal" data-target="#btnMenuModal">Add</button>
            </div>
            <div class="modal fade" id="btnMenuModal">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h3 class="modal-title" id="uscHeaderText">Add Menu</h3>
                            <button type="button" class="close" data-dismiss="modal"><span>&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-6">
                                    <label for="">Controller Name</label>
                                    <input type="text" class="form-control">
                                </div>
                                <div class="col-6">
                                    <label for="">Route</label>
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            <div class="row">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered zero-configuration w-100" id="menuTable">
                <tr>
                    <th></th>
                    <th>Controller</th>
                    <th>Route</th>
                    <th>Creator</th>
                    <th>Created</th>
                </tr>
            </table>
        </div>
    </div>
</div>

