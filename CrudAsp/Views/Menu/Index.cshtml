    <script src="@Url.Content("~/js/gleek.js")"></script>
    <script src="@Url.Content("~/js/styleSwitcher.js")"></script>
    <script src="@Url.Content("~/js/axios.min.js")"></script>
    <script src="@Url.Content("~/js/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/js/sweetalert2.min.js")"></script>
    <script src="@Url.Content("~/js/select2.min.js")"></script>
    <script src="@Url.Content("~/js/select2.js")"></script>
    <script src="@Url.Content("~/js/app/menu/index.js")"></script>
    <script src="@Url.Content("~/js/jstree.min.js")"></script>

    <script src="@Url.Content("~/plugins/tables/js/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/plugins/tables/js/datatable/dataTables.bootstrap4.min.js")"></script>
    <script src="@Url.Content("~/plugins/tables/js/datatable-init/datatable-basic.min.js")"></script>
