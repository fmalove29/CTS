<head>
    <!-- Add Local Select2 CSS -->
    <link href="@Url.Content("~/css/select2.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/jquery.dataTables.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/cinemaformat/cinemaformat.css")" rel="stylesheet" />
    

</head>

<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="card-title"><h1 class="text-danger"><strong>Cinema Format Management</strong></h1></div>
            <div class="d-flex justify-content-end mb-2">
                    <button type="button" class="btn btn-netflix-primary" id="btnAddHall" data-bs-toggle="modal" data-bs-target="#btnHallShow">Add Format</button>
                </div>
            <div class="row">
                <table class="table table-striped zero-configuration w-100">
                    <thead>
                        <tr>
                            <th>Screen Type</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
    <div class="modal  fade" id="btnHallShow" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="d-flex flex-column">
                        <h1 class="modal-title fs-5 text-danger" id="exampleModalLabel"><strong>Create New Cinema Format</strong></h1>
                        <small class="text-danger"></small>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="cinemaFormat" class="form-label text-dark">Cinema Format:</label>
                        <select id="cinemaFormat" class="form-control"></select>
                    </div>

                    <div class="mb-3 row">
                        <label for="hallName" class="col-3 col-form-label text-dark">Description</label>
                        <div class="col-9">
                            <textarea name="" id="" cols="30" rows="10" class="form-control"></textarea>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="seatCapacity" class="col-4 col-form-label text-dark">Price:</label>
                        <div class="col-8">
                            <input type="text" class="form-control" id="seatCapacity">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button class="btn btn-netflix-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="@Url.Content("~/js/axios.min.js")"></script>
    <script src="@Url.Content("~/js/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/js/sweetalert2.min.js")"></script>
    <script src="@Url.Content("~/js/select2.min.js")"></script>
    <script src="@Url.Content("~/js/select2.js")"></script>
    <script src="@Url.Content("~/js/app/cinemaformat/cinemaformat.js")"></script>
}