@model CrudAsp.resource.response.CinemaResponse

<head>
    <!-- Add Local Select2 CSS -->
    <link href="@Url.Content("~/css/select2.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/jquery.dataTables.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/cinema/cinema-details.css")" rel="stylesheet" />
    

</head>

<div class="container mt-2">
    <div class="card w-100">
        <div class="card-body">
            <input type="text" name="" id="cinemaId" class="d-none" value="@Model.Id">
            <div class="card-title"><h1 class="text-danger"><strong>@Model.CinemaName</strong></h1></div>
            <div class="d-flex justify-content-end mb-2">
                    <button type="button" class="btn btn-netflix-primary" id="btnAddHall" data-bs-toggle="modal" data-bs-target="#hallModal">Add Halls</button>
                </div>
            <table class="table table-striped zero-configuration" id="hTable">
                <thead>
                    <tr>
                        <th></th>
                        <th>Hall Name</th>
                        <th>Seat Capacity</th>
                        <th>Screen Type</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    <a class="btn btn-secondary" asp-controller="Cinema" asp-action="Index">Back</a>


    <div class="modal  fade" id="hallModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="d-flex flex-column">
                        <h1 class="modal-title fs-5 text-danger" id="exampleModalLabel"><strong>@Model.CinemaName</strong></h1>
                        <small class="text-danger">@Model.Location</small>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="cinemaFormat" class="form-label text-dark">Cinema Format:</label>
                        <select id="cinemaFormat" class="form-control"></select>
                    </div>

                    <div class="mb-3 row">
                        <label for="hallName" class="col-4 col-form-label text-dark">Hall Name:</label>
                        <div class="col-8">
                            <input type="text" class="form-control" id="hallName">
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="seatCapacity" class="col-4 col-form-label text-dark">Seat Capacity:</label>
                        <div class="col-8">
                            <input type="text" class="form-control" id="seatCapacity">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button class="btn btn-netflix-primary" id="btnHallSave" data-id="@Model.Id">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal  fade" id="addShowModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="d-flex flex-column">
                        <h1 class="modal-title fs-5 text-danger" id="exampleModalLabel"><strong>@Model.CinemaName</strong></h1>
                        <small class="text-danger">@Model.Location</small>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="cinemaFormat" class="form-label text-dark">Movies :</label>
                        <select id="movieSelect" class="form-control"></select>
                    </div>

                    <div class="mb-3 row">
                        <label for="hallName" class="col-4 col-form-label text-dark">Date :</label>
                        <div class="col-8">
                            <input type="datetime-local" class="form-control" id="showDate">
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button class="btn btn-netflix-primary" id="btnShowSave" data-id="@Model.Id">Add</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="@Url.Content("~/js/axios.min.js")"></script>
    <script src="@Url.Content("~/js/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/js/sweetalert2.min.js")"></script>
    <script src="@Url.Content("~/js/select2.min.js")"></script>
    <script src="@Url.Content("~/js/select2.js")"></script>
    <script src="@Url.Content("~/js/app/cinema/cinema-details.js")"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
}