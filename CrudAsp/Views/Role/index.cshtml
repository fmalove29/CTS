<head>
    <link href="@Url.Content("~/css/dataTables.bootstrap4.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/plugins/toastr/css/toastr.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/plugins/sweetalert/css/sweetalert.css")" rel="stylesheet">
</head>
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title"><h1 class="text-danger"><strong>Roles</strong></h1></div>
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-netflix-primary" data-toggle="modal" data-target="#addRoleModal">Add</button>
                        <div class="modal fade" id="addRoleModal" tabindex="-1" role="dialog">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h3 class="modal-title">Create New Role</h3>
                                        <button type="button" class="close" data-dismiss="modal"><span>&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="col-12">
                                                <label for="">Name</label>
                                                <input type="text" class="form-control" id="roleName">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="testtree" id="moduleTree">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-sm btn-primary" id="btnSaveRole">Create</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-bordered zero-configuration w-100" id="r_table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


