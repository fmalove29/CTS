@{
    var menuItems = ViewData["MenuItems"] as List<CrudAsp.resource.response.MenuItemDTO>;
}
@model CrudAsp.resource.response.UserResponseDTO

<head>
    <link href="@Url.Content("~/css/dataTables.bootstrap4.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/plugins/toastr/css/toastr.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/plugins/sweetalert/css/sweetalert.css")" rel="stylesheet">
    <style>
        .full-height-card {
            height: 100vh;
            /* Full viewport height */
            display: flex;
            /* Ensures proper layout of card content */
            flex-direction: column;
            /* Allows child elements to stack vertically */
        }
    </style>
</head>
<div class="container">
    <div class="card full-height-card">
        <div class="card-body">
            <div class="row">
                <div class="col-5">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-header mb-3">
                                <h3>Roles</h3>
                            </div>
                            <table class="table table-striped table-bordered zero-configuration" id="addRoleTb">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="card">
                        <input type="text" id="userId" value="@Model.Id" hidden>
                        <div class="card-body">
                            <div class="card-header mb-3">
                                <h3>@Model.FirstName</h3>
                            </div>
                            <table class="table table-striped table-bordered zero-configuration" id="rTb">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody id="tbRoles"
                                    data-data='@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Roles))'>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
